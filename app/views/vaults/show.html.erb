<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold text-gray-900"><%= @vault.name %></h1>
  <div class="flex space-x-2">
    <%= link_to "Edit Vault", edit_vault_path(@vault), 
          class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to "Back to Vaults", vaults_path, 
          class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Entries Section -->
  <div class="lg:col-span-2">
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <div class="flex justify-between items-center">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Entries</h3>
          <div class="flex space-x-2">
            <%= link_to "New Message", new_vault_entry_path(@vault, type: 'Message'), 
                  class: "bg-blue-500 hover:bg-blue-700 text-white text-sm font-bold py-1 px-3 rounded" %>
            <%= link_to "New Email", new_vault_entry_path(@vault, type: 'Email'), 
                  class: "bg-green-500 hover:bg-green-700 text-white text-sm font-bold py-1 px-3 rounded" %>
            <%= link_to "New Link", new_vault_entry_path(@vault, type: 'Link'), 
                  class: "bg-purple-500 hover:bg-purple-700 text-white text-sm font-bold py-1 px-3 rounded" %>
          </div>
        </div>
      </div>
      <div class="px-4 py-5 sm:p-6">
        <% if @entries.any? %>
          <ul class="divide-y divide-gray-200">
            <% @entries.each do |entry| %>
              <li class="py-3">
                <div class="flex items-center space-x-3">
                  <div class="flex-shrink-0">
                    <% case entry.entriable_type %>
                    <% when 'Email' %>
                      <div class="h-8 w-8 bg-green-100 rounded-full flex items-center justify-center">
                        <span class="text-green-600 font-medium text-sm">@</span>
                      </div>
                    <% when 'Message' %>
                      <div class="h-8 w-8 bg-blue-100 rounded-full flex items-center justify-center">
                        <span class="text-blue-600 font-medium text-sm">M</span>
                      </div>
                    <% when 'Link' %>
                      <div class="h-8 w-8 bg-purple-100 rounded-full flex items-center justify-center">
                        <span class="text-purple-600 font-medium text-sm">L</span>
                      </div>
                    <% end %>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 truncate">
                      <%= entry.title.present? ? entry.title : "#{entry.entriable_type} entry" %>
                    </p>
                    <p class="text-sm text-gray-500 truncate">
                      <%= entry.description.present? ? entry.description : "No description" %>
                    </p>
                  </div>
                  <div class="flex-shrink-0">
                    <%= link_to "View", [@vault, entry], 
                          class: "text-blue-600 hover:text-blue-500 text-sm font-medium" %>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
          <div class="mt-4">
            <%= link_to "View All Entries", [@vault, :entries], 
                  class: "text-blue-600 hover:text-blue-500 text-sm font-medium" %>
          </div>
        <% else %>
          <div class="text-center py-6">
            <p class="text-gray-500">No entries yet. Create your first entry!</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Contexts Section -->
  <div>
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <div class="flex justify-between items-center">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Contexts</h3>
          <%= link_to "New Context", new_vault_context_path(@vault), 
                class: "bg-indigo-500 hover:bg-indigo-700 text-white text-sm font-bold py-1 px-3 rounded" %>
        </div>
      </div>
      <div class="px-4 py-5 sm:p-6">
        <% if @contexts.any? %>
          <ul class="space-y-3">
            <% @contexts.each do |context| %>
              <li>
                <div class="border rounded p-3 hover:bg-gray-50">
                  <div class="flex justify-between items-start">
                    <div>
                      <p class="font-medium text-gray-900"><%= context.name %></p>
                      <p class="text-sm text-gray-500"><%= context.description %></p>
                      <p class="text-xs text-gray-400 mt-1">
                        <%= pluralize(context.entries.count, 'entry') %>
                      </p>
                    </div>
                    <div class="text-right">
                      <%= link_to "View", [@vault, context], 
                            class: "text-blue-600 hover:text-blue-500 text-sm" %>
                    </div>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
          <div class="mt-4">
            <%= link_to "View All Contexts", [@vault, :contexts], 
                  class: "text-blue-600 hover:text-blue-500 text-sm font-medium" %>
          </div>
        <% else %>
          <div class="text-center py-6">
            <p class="text-gray-500">No contexts yet. Create your first context!</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>