<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold text-gray-900">Your Vaults</h1>
  <%= link_to "New Vault", new_vault_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @vaults.each do |vault| %>
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v8a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h4a2 2 0 012 2v2a2 2 0 01-2 2H8a2 2 0 01-2-2v-2z" clip-rule="evenodd" />
              </svg>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">
                <%= vault.name %>
              </dt>
              <dd class="text-lg font-medium text-gray-900">
                <%= pluralize(vault.entries.count, 'entry') %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-5 py-3">
        <div class="text-sm">
          <%= link_to vault, class: "font-medium text-blue-600 hover:text-blue-500" do %>
            View details<span class="sr-only"> for <%= vault.name %></span>
          <% end %>
          <span class="text-gray-300 mx-2">|</span>
          <%= link_to "Edit", edit_vault_path(vault), class: "font-medium text-gray-600 hover:text-gray-500" %>
          <span class="text-gray-300 mx-2">|</span>
          <%= link_to "Delete", vault, method: :delete, 
                      confirm: "Are you sure?", 
                      class: "font-medium text-red-600 hover:text-red-500" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @vaults.empty? %>
  <div class="text-center py-12">
    <div class="mx-auto h-12 w-12 text-gray-400">
      <svg fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v8a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h4a2 2 0 012 2v2a2 2 0 01-2 2H8a2 2 0 01-2-2v-2z" clip-rule="evenodd" />
      </svg>
    </div>
    <h3 class="mt-2 text-sm font-medium text-gray-900">No vaults</h3>
    <p class="mt-1 text-sm text-gray-500">Get started by creating a new vault.</p>
    <div class="mt-6">
      <%= link_to "New Vault", new_vault_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
    </div>
  </div>
<% end %>