<% content_for(:title, @entry.title || "Entry ##{@entry.id}") %>

<!-- Back link -->
<div class="max-lg:hidden">
  <%= link_to vault_entries_path(@vault), class: "inline-flex items-center gap-2 text-sm/6 text-zinc-500 dark:text-zinc-400" do %>
    <svg class="size-4 fill-zinc-400 dark:fill-zinc-500" viewBox="0 0 16 16">
      <path fill-rule="evenodd" d="M9.78 4.22a.75.75 0 0 1 0 1.06L7.06 8l2.72 2.72a.75.75 0 1 1-1.06 1.06L5.47 8.53a.75.75 0 0 1 0-1.06l3.25-3.25a.75.75 0 0 1 1.06 0Z" clip-rule="evenodd" />
    </svg>
    Entries
  <% end %>
</div>

<!-- Header -->
<div class="mt-4 lg:mt-8">
  <div class="flex items-center gap-4">
    <h1 class="text-2xl font-semibold text-zinc-950 sm:text-xl dark:text-white">
      <%= @entry.title.presence || "Entry ##{@entry.id}" %>
    </h1>
    <span class="inline-flex items-center gap-x-1.5 rounded-md px-1.5 py-0.5 text-xs font-medium ring-1 ring-inset bg-lime-50 text-lime-700 ring-lime-600/20 dark:bg-lime-400/10 dark:text-lime-400 dark:ring-lime-400/20">
      <%= @entry.entriable_type.demodulize %>
    </span>
  </div>
  
  <!-- Meta info -->
  <div class="isolate mt-2.5 flex flex-wrap justify-between gap-x-6 gap-y-4">
    <div class="flex flex-wrap gap-x-10 gap-y-4 py-1.5">
      <!-- Type -->
      <span class="flex items-center gap-3 text-base/6 text-zinc-950 sm:text-sm/6 dark:text-white">
        <% case @entry.entriable_type %>
        <% when 'Entry::Email' %>
          <svg class="size-4 shrink-0 fill-zinc-400 dark:fill-zinc-500" viewBox="0 0 20 20">
            <path d="M3 4a2 2 0 0 0-2 2v1.161l8.441 4.221a1.25 1.25 0 0 0 1.118 0L19 7.162V6a2 2 0 0 0-2-2H3Z" />
            <path d="m19 8.839-7.77 3.885a2.75 2.75 0 0 1-2.46 0L1 8.839V14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V8.839Z" />
          </svg>
        <% when 'Entry::Message' %>
          <svg class="size-4 shrink-0 fill-zinc-400 dark:fill-zinc-500" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 2c-2.236 0-4.43.18-6.57.524C1.993 2.755 1 4.014 1 5.426v5.148c0 1.413.993 2.67 2.43 2.902.848.137 1.705.248 2.57.331v3.443a.75.75 0 0 0 1.28.53l3.58-3.579a.78.78 0 0 1 .527-.224 41.202 41.202 0 0 0 5.183-.5c1.437-.232 2.43-1.49 2.43-2.903V5.426c0-1.413-.993-2.67-2.43-2.902A41.289 41.289 0 0 0 10 2Zm0 7a1 1 0 1 0 0-2 1 1 0 0 0 0 2ZM8 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0Zm5 1a1 1 0 1 0 0-2 1 1 0 0 0 0 2Z" clip-rule="evenodd" />
          </svg>
        <% when 'Entry::Link' %>
          <svg class="size-4 shrink-0 fill-zinc-400 dark:fill-zinc-500" viewBox="0 0 20 20">
            <path d="M12.232 4.232a2.5 2.5 0 0 1 3.536 3.536l-1.225 1.224a.75.75 0 0 0 1.061 1.06l1.224-1.224a4 4 0 0 0-5.656-5.656l-3 3a4 4 0 0 0 .225 5.865.75.75 0 0 0 .977-1.138 2.5 2.5 0 0 1-.142-3.667l3-3Z" />
            <path d="M11.603 7.963a.75.75 0 0 0-.977 1.138 2.5 2.5 0 0 1 .142 3.667l-3 3a2.5 2.5 0 0 1-3.536-3.536l1.225-1.224a.75.75 0 0 0-1.061-1.06l-1.224 1.224a4 4 0 1 0 5.656 5.656l3-3a4 4 0 0 0-.225-5.865Z" />
          </svg>
        <% end %>
        <span><%= @entry.entriable_type.demodulize %></span>
      </span>
      
      <!-- Created date -->
      <span class="flex items-center gap-3 text-base/6 text-zinc-950 sm:text-sm/6 dark:text-white">
        <svg class="size-4 shrink-0 fill-zinc-400 dark:fill-zinc-500" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5.75 2a.75.75 0 0 1 .75.75V4h7V2.75a.75.75 0 0 1 1.5 0V4h.25A2.75 2.75 0 0 1 18 6.75v8.5A2.75 2.75 0 0 1 15.25 18H4.75A2.75 2.75 0 0 1 2 15.25v-8.5A2.75 2.75 0 0 1 4.75 4H5V2.75A.75.75 0 0 1 5.75 2Zm-1 5.5c-.69 0-1.25.56-1.25 1.25v6.5c0 .69.56 1.25 1.25 1.25h10.5c.69 0 1.25-.56 1.25-1.25v-6.5c0-.69-.56-1.25-1.25-1.25H4.75Z" clip-rule="evenodd" />
        </svg>
        <span><%= @entry.created_at.strftime("%B %d, %Y") %></span>
      </span>
      
      <!-- Vault -->
      <span class="flex items-center gap-3 text-base/6 text-zinc-950 sm:text-sm/6 dark:text-white">
        <svg class="size-4 shrink-0 fill-zinc-400 dark:fill-zinc-500" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M4.5 2A1.5 1.5 0 0 0 3 3.5v13A1.5 1.5 0 0 0 4.5 18h11a1.5 1.5 0 0 0 1.5-1.5V7.621a1.5 1.5 0 0 0-.44-1.06l-4.12-4.122A1.5 1.5 0 0 0 11.378 2H4.5Zm2.25 8.5a.75.75 0 0 0 0 1.5h6.5a.75.75 0 0 0 0-1.5h-6.5Zm0 3a.75.75 0 0 0 0 1.5h6.5a.75.75 0 0 0 0-1.5h-6.5Z" clip-rule="evenodd" />
        </svg>
        <span><%= @vault.name %></span>
      </span>
    </div>
    
    <!-- Actions -->
    <div class="flex gap-4">
      <%= link_to edit_vault_entry_path(@vault, @entry), class: "relative inline-flex items-center gap-2 rounded-lg border border-zinc-300 bg-white px-3 py-1.5 text-sm font-medium text-zinc-950 hover:bg-zinc-50 dark:border-white/10 dark:bg-white/5 dark:text-white dark:hover:bg-white/10" do %>
        Edit
      <% end %>
      <%= link_to [@vault, @entry], data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this entry?" }, class: "relative inline-flex items-center gap-2 rounded-lg border border-transparent bg-zinc-950 px-3 py-1.5 text-sm font-medium text-white hover:bg-zinc-800 dark:bg-white dark:text-zinc-950 dark:hover:bg-zinc-200" do %>
        Delete
      <% end %>
    </div>
  </div>
</div>

<!-- Content -->
<div class="mt-12">
  <h2 class="text-base/7 font-semibold text-zinc-950 sm:text-sm/6 dark:text-white">Content</h2>
  <hr class="mt-4 w-full border-t border-zinc-950/10 dark:border-white/10">
  
  <div class="mt-6">
    <% case @entry.entriable_type %>
    <% when 'Entry::Email' %>
      <dl class="grid grid-cols-1 text-base/6 sm:grid-cols-2 sm:text-sm/6">
        <div class="border-t border-zinc-950/5 px-0 py-4 dark:border-white/5 sm:px-0">
          <dt class="font-medium text-zinc-950 dark:text-white">From</dt>
          <dd class="text-zinc-500 dark:text-zinc-400 mt-1"><%= @entry.entriable.from %></dd>
        </div>
        <div class="border-t border-zinc-950/5 px-0 py-4 dark:border-white/5 sm:px-0">
          <dt class="font-medium text-zinc-950 dark:text-white">To</dt>
          <dd class="text-zinc-500 dark:text-zinc-400 mt-1"><%= @entry.entriable.to %></dd>
        </div>
        <% if @entry.entriable.cc.present? %>
          <div class="border-t border-zinc-950/5 px-0 py-4 dark:border-white/5 sm:px-0">
            <dt class="font-medium text-zinc-950 dark:text-white">CC</dt>
            <dd class="text-zinc-500 dark:text-zinc-400 mt-1"><%= @entry.entriable.cc %></dd>
          </div>
        <% end %>
        <% if @entry.entriable.subject.present? %>
          <div class="border-t border-zinc-950/5 px-0 py-4 dark:border-white/5 sm:px-0 <%= @entry.entriable.cc.present? ? '' : 'sm:col-start-2' %>">
            <dt class="font-medium text-zinc-950 dark:text-white">Subject</dt>
            <dd class="text-zinc-500 dark:text-zinc-400 mt-1"><%= @entry.entriable.subject %></dd>
          </div>
        <% end %>
        <% if @entry.entriable.received_at.present? %>
          <div class="border-t border-zinc-950/5 px-0 py-4 dark:border-white/5 sm:px-0 sm:col-span-2">
            <dt class="font-medium text-zinc-950 dark:text-white">Received at</dt>
            <dd class="text-zinc-500 dark:text-zinc-400 mt-1"><%= @entry.entriable.received_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
          </div>
        <% end %>
        <div class="border-t border-zinc-950/5 px-0 py-4 dark:border-white/5 sm:px-0 sm:col-span-2">
          <dt class="font-medium text-zinc-950 dark:text-white">Body</dt>
          <dd class="text-zinc-500 dark:text-zinc-400 mt-1 whitespace-pre-wrap"><%= @entry.entriable.body %></dd>
        </div>
      </dl>
    <% when 'Entry::Message' %>
      <div class="prose prose-zinc max-w-none dark:prose-invert">
        <p class="text-zinc-600 dark:text-zinc-400 whitespace-pre-wrap"><%= @entry.entriable.text %></p>
      </div>
    <% when 'Entry::Link' %>
      <dl class="grid grid-cols-1 text-base/6 sm:text-sm/6">
        <div class="border-t border-zinc-950/5 px-0 py-4 dark:border-white/5 sm:px-0">
          <dt class="font-medium text-zinc-950 dark:text-white">URL</dt>
          <dd class="text-zinc-500 dark:text-zinc-400 mt-1">
            <%= link_to @entry.entriable.url, @entry.entriable.url, target: "_blank", rel: "noopener noreferrer", class: "text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300" %>
          </dd>
        </div>
        <% if @entry.entriable.title.present? %>
          <div class="border-t border-zinc-950/5 px-0 py-4 dark:border-white/5 sm:px-0">
            <dt class="font-medium text-zinc-950 dark:text-white">Title</dt>
            <dd class="text-zinc-500 dark:text-zinc-400 mt-1"><%= @entry.entriable.title %></dd>
          </div>
        <% end %>
      </dl>
    <% end %>
  </div>
</div>

<!-- Description -->
<% if @entry.description.present? %>
  <div class="mt-12">
    <h2 class="text-base/7 font-semibold text-zinc-950 sm:text-sm/6 dark:text-white">Description</h2>
    <hr class="mt-4 w-full border-t border-zinc-950/10 dark:border-white/10">
    <div class="mt-6">
      <p class="text-zinc-600 dark:text-zinc-400 whitespace-pre-wrap"><%= @entry.description %></p>
    </div>
  </div>
<% end %>

<!-- Contexts -->
<% if @entry.contexts.any? %>
  <div class="mt-12">
    <h2 class="text-base/7 font-semibold text-zinc-950 sm:text-sm/6 dark:text-white">Contexts</h2>
    <hr class="mt-4 w-full border-t border-zinc-950/10 dark:border-white/10">
    <div class="mt-6">
      <div class="flex flex-wrap gap-2">
        <% @entry.contexts.each do |context| %>
          <%= link_to vault_context_path(@vault, context), class: "inline-flex items-center gap-x-1.5 rounded-md bg-zinc-100 px-2 py-1 text-xs font-medium text-zinc-700 hover:bg-zinc-200 dark:bg-zinc-800 dark:text-zinc-300 dark:hover:bg-zinc-700" do %>
            <svg class="h-1.5 w-1.5 fill-zinc-400 dark:fill-zinc-500" viewBox="0 0 6 6">
              <circle cx="3" cy="3" r="3" />
            </svg>
            <%= context.name %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<!-- Attachments -->
<% if @entry.attachments.any? %>
  <div class="mt-12">
    <h2 class="text-base/7 font-semibold text-zinc-950 sm:text-sm/6 dark:text-white">Attachments</h2>
    <hr class="mt-4 w-full border-t border-zinc-950/10 dark:border-white/10">
    <div class="mt-6">
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <% @entry.attachments.each do |attachment| %>
          <div class="flex items-center gap-3 rounded-lg border border-zinc-200 p-3 dark:border-zinc-800">
            <div class="flex-shrink-0">
              <svg class="size-8 text-zinc-400 dark:text-zinc-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M15.621 4.379a3 3 0 0 0-4.242 0l-7 7a3 3 0 0 0 4.241 4.243h.001l.497-.5a.75.75 0 0 1 1.064 1.057l-.498.501-.002.002a4.5 4.5 0 0 1-6.364-6.364l7-7a4.5 4.5 0 0 1 6.368 6.36l-3.455 3.553A2.625 2.625 0 1 1 9.52 9.52l3.45-3.451a.75.75 0 1 1 1.061 1.06l-3.45 3.451a1.125 1.125 0 0 0 1.587 1.595l3.454-3.553a3 3 0 0 0 0-4.242Z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="min-w-0 flex-1">
              <p class="text-sm font-medium text-zinc-900 dark:text-zinc-100 truncate">
                <%= attachment.filename %>
              </p>
              <p class="text-xs text-zinc-500 dark:text-zinc-400">
                <%= number_to_human_size(attachment.byte_size) %>
              </p>
            </div>
            <div class="flex-shrink-0">
              <%= link_to attachment, class: "text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300" do %>
                <svg class="size-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>