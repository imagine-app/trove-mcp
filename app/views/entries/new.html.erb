<div class="max-w-2xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">New <%= @entry_type %> Entry</h1>
    <div class="flex space-x-2">
      <%= link_to "Message", new_vault_entry_path(@vault, type: 'Message'), 
            class: "#{'bg-blue-500 text-white' if @entry_type == 'Message'} #{'bg-gray-200 text-gray-700' if @entry_type != 'Message'} px-3 py-1 rounded text-sm" %>
      <%= link_to "Email", new_vault_entry_path(@vault, type: 'Email'), 
            class: "#{'bg-green-500 text-white' if @entry_type == 'Email'} #{'bg-gray-200 text-gray-700' if @entry_type != 'Email'} px-3 py-1 rounded text-sm" %>
      <%= link_to "Link", new_vault_entry_path(@vault, type: 'Link'), 
            class: "#{'bg-purple-500 text-white' if @entry_type == 'Link'} #{'bg-gray-200 text-gray-700' if @entry_type != 'Link'} px-3 py-1 rounded text-sm" %>
    </div>
  </div>

  <%= form_with model: [@vault, @entry], class: "space-y-6" do |form| %>
    <% if @entry.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-md p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">There were some errors with your submission</h3>
            <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
              <% @entry.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <%= form.hidden_field :type, value: @entry_type %>

    <!-- Common Fields -->
    <div>
      <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :title, 
            class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
            placeholder: "Enter title..." %>
    </div>

    <div>
      <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, rows: 3,
            class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
            placeholder: "Enter description..." %>
    </div>

    <!-- Type-specific Fields -->
    <div class="border-t pt-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4"><%= @entry_type %> Details</h3>
      
      <% case @entry_type %>
      <% when 'Message' %>
        <div>
          <%= label_tag "entry[entriable_attributes][text]", "Message Text", class: "block text-sm font-medium text-gray-700" %>
          <%= text_area_tag "entry[entriable_attributes][text]", nil, rows: 5,
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                placeholder: "Enter your message..." %>
        </div>

      <% when 'Email' %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= label_tag "entry[entriable_attributes][from]", "From", class: "block text-sm font-medium text-gray-700" %>
            <%= email_field_tag "entry[entriable_attributes][from]", nil,
                  class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                  placeholder: "from@example.com" %>
          </div>
          <div>
            <%= label_tag "entry[entriable_attributes][to]", "To", class: "block text-sm font-medium text-gray-700" %>
            <%= email_field_tag "entry[entriable_attributes][to]", nil,
                  class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                  placeholder: "to@example.com" %>
          </div>
        </div>
        
        <div>
          <%= label_tag "entry[entriable_attributes][cc]", "CC (optional)", class: "block text-sm font-medium text-gray-700" %>
          <%= email_field_tag "entry[entriable_attributes][cc]", nil,
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                placeholder: "cc@example.com" %>
        </div>

        <div>
          <%= label_tag "entry[entriable_attributes][subject]", "Subject", class: "block text-sm font-medium text-gray-700" %>
          <%= text_field_tag "entry[entriable_attributes][subject]", nil,
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                placeholder: "Email subject..." %>
        </div>

        <div>
          <%= label_tag "entry[entriable_attributes][body]", "Body", class: "block text-sm font-medium text-gray-700" %>
          <%= text_area_tag "entry[entriable_attributes][body]", nil, rows: 5,
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                placeholder: "Email body..." %>
        </div>

      <% when 'Link' %>
        <div>
          <%= label_tag "entry[entriable_attributes][url]", "URL", class: "block text-sm font-medium text-gray-700" %>
          <%= url_field_tag "entry[entriable_attributes][url]", nil,
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                placeholder: "https://example.com" %>
        </div>
        
        <div>
          <%= label_tag "entry[entriable_attributes][title]", "Link Title", class: "block text-sm font-medium text-gray-700" %>
          <%= text_field_tag "entry[entriable_attributes][title]", nil,
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                placeholder: "Link title..." %>
        </div>
      <% end %>
    </div>

    <div class="flex justify-between">
      <%= form.submit "Create Entry", 
            class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to "Cancel", [@vault, :entries], 
            class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>