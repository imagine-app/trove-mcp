<div class="flex justify-between items-center mb-6">
  <div>
    <h1 class="text-3xl font-bold text-gray-900">Entries in <%= @vault.name %></h1>
    <p class="mt-1 text-sm text-gray-500">
      Manage all your entries in this vault
    </p>
  </div>
  <div class="flex space-x-2">
    <%= link_to "New Message", new_vault_entry_path(@vault, type: 'Message'), 
          class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to "New Email", new_vault_entry_path(@vault, type: 'Email'), 
          class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to "New Link", new_vault_entry_path(@vault, type: 'Link'), 
          class: "bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>

<div class="bg-white shadow overflow-hidden sm:rounded-md">
  <% if @entries.any? %>
    <ul class="divide-y divide-gray-200">
      <% @entries.each do |entry| %>
        <li class="hover:bg-gray-50">
          <div class="px-4 py-4 sm:px-6">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="flex-shrink-0 mr-4">
                  <% case entry.entriable_type %>
                  <% when 'Email' %>
                    <div class="h-10 w-10 bg-green-100 rounded-full flex items-center justify-center">
                      <span class="text-green-600 font-medium">@</span>
                    </div>
                  <% when 'Message' %>
                    <div class="h-10 w-10 bg-blue-100 rounded-full flex items-center justify-center">
                      <span class="text-blue-600 font-medium">M</span>
                    </div>
                  <% when 'Link' %>
                    <div class="h-10 w-10 bg-purple-100 rounded-full flex items-center justify-center">
                      <span class="text-purple-600 font-medium">L</span>
                    </div>
                  <% end %>
                </div>
                <div>
                  <p class="text-sm font-medium text-gray-900">
                    <%= entry.title.present? ? entry.title : "#{entry.entriable_type} entry" %>
                  </p>
                  <p class="text-sm text-gray-500">
                    <%= entry.description.present? ? truncate(entry.description, length: 100) : "No description" %>
                  </p>
                  <div class="mt-1 flex text-xs text-gray-400 space-x-2">
                    <span>Type: <%= entry.entriable_type %></span>
                    <span>•</span>
                    <span>Created: <%= entry.created_at.strftime("%b %d, %Y") %></span>
                  </div>
                </div>
              </div>
              <div class="flex space-x-2">
                <%= link_to "View", [@vault, entry], 
                      class: "text-blue-600 hover:text-blue-500 text-sm font-medium" %>
                <%= link_to "Edit", edit_vault_entry_path(@vault, entry), 
                      class: "text-yellow-600 hover:text-yellow-500 text-sm font-medium" %>
                <%= link_to "Delete", [@vault, entry], method: :delete, 
                      confirm: "Are you sure?", 
                      class: "text-red-600 hover:text-red-500 text-sm font-medium" %>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="text-center py-12">
      <div class="mx-auto h-12 w-12 text-gray-400">
        <svg fill="currentColor" viewBox="0 0 20 20">
          <path d="M4 3a2 2 0 100 4h12a2 2 0 100-4H4z"/>
          <path fill-rule="evenodd" d="M3 8h14v7a2 2 0 01-2 2H5a2 2 0 01-2-2V8zm5 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z" clip-rule="evenodd"/>
        </svg>
      </div>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No entries</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by creating a new entry.</p>
      <div class="mt-6 flex justify-center space-x-2">
        <%= link_to "New Message", new_vault_entry_path(@vault, type: 'Message'), 
              class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-4">
  <%= link_to "← Back to #{@vault.name}", @vault, 
        class: "text-blue-600 hover:text-blue-500 text-sm font-medium" %>
</div>