<div class="max-w-md mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
  <h1 class="text-2xl font-bold text-center mb-6">Sign Up</h1>
  
  <%= form_with model: @user, local: true, class: "space-y-4" do |form| %>
    <% if @user&.errors&.any? %>
      <div class="bg-red-50 border border-red-200 rounded-md p-4">
        <h2 class="text-red-800 font-semibold mb-2">Please fix the following errors:</h2>
        <ul class="text-red-700 list-disc list-inside">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Enter your email" %>
    </div>

    <div>
      <%= form.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.password_field :password, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Enter your password (min. 6 characters)" %>
    </div>

    <div>
      <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.password_field :password_confirmation, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Confirm your password" %>
    </div>

    <div>
      <%= form.submit "Create Account", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200" %>
    </div>
  <% end %>
  
  <p class="text-center mt-4 text-gray-600">
    Already have an account? <%= link_to "Login", login_path, class: "text-blue-600 hover:text-blue-800" %>
  </p>
</div>
