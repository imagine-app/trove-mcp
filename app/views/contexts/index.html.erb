<div class="flex justify-between items-center mb-6">
  <div>
    <h1 class="text-3xl font-bold text-gray-900">Contexts in <%= @vault.name %></h1>
    <p class="mt-1 text-sm text-gray-500">
      Organize your entries by context
    </p>
  </div>
  <%= link_to "New Context", new_vault_context_path(@vault), 
        class: "bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded" %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @contexts.each do |context| %>
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-indigo-500 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V8zm0 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1v-2z" clip-rule="evenodd" />
              </svg>
            </div>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 truncate">
                <%= context.name %>
              </dt>
              <dd class="text-sm text-gray-900">
                <%= truncate(context.description, length: 60) %>
              </dd>
              <dd class="text-xs text-gray-400 mt-1">
                <%= pluralize(context.entries.count, 'entry') %> • 
                <%= context.autotag? ? 'Auto-tag enabled' : 'Manual tagging' %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-5 py-3">
        <div class="text-sm">
          <%= link_to context, class: "font-medium text-indigo-600 hover:text-indigo-500", path: [@vault, context] do %>
            View details<span class="sr-only"> for <%= context.name %></span>
          <% end %>
          <span class="text-gray-300 mx-2">|</span>
          <%= link_to "Edit", edit_vault_context_path(@vault, context), class: "font-medium text-gray-600 hover:text-gray-500" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @contexts.empty? %>
  <div class="text-center py-12">
    <div class="mx-auto h-12 w-12 text-gray-400">
      <svg fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V8zm0 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1v-2z" clip-rule="evenodd" />
      </svg>
    </div>
    <h3 class="mt-2 text-sm font-medium text-gray-900">No contexts</h3>
    <p class="mt-1 text-sm text-gray-500">Get started by creating your first context.</p>
    <div class="mt-6">
      <%= link_to "New Context", new_vault_context_path(@vault), 
            class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
    </div>
  </div>
<% end %>

<div class="mt-4">
  <%= link_to "← Back to #{@vault.name}", @vault, 
        class: "text-blue-600 hover:text-blue-500 text-sm font-medium" %>
</div>