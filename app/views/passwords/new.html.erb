<%= form_with(url: passwords_path, local: true, class: "grid w-full max-w-sm grid-cols-1 gap-8") do |form| %>
  <!-- Logo -->
  <h1 class="text-3xl font-bold tracking-tight text-zinc-950 dark:text-white">
    TROVE
  </h1>
  
  <!-- Heading -->
  <h2 class="text-2xl font-bold tracking-tight text-zinc-950 dark:text-white">
    Forgot your password?
  </h2>
  
  <p class="text-sm text-zinc-500 dark:text-zinc-400">
    Enter your email address and we'll send you a link to reset your password.
  </p>
  
  <!-- Email Field -->
  <div>
    <label for="email_address" class="block text-sm font-medium text-zinc-950 dark:text-white">
      Email
    </label>
    <div class="mt-3">
      <%= form.email_field :email_address, 
          id: "email_address",
          required: true,
          autofocus: true,
          autocomplete: "username",
          value: params[:email_address],
          class: "block w-full rounded-lg border border-zinc-300 px-3 py-2 text-sm placeholder-zinc-500 shadow-sm focus:border-blue-500 focus:ring-1 focus:ring-blue-500 dark:border-zinc-700 dark:bg-zinc-800 dark:text-white dark:placeholder-zinc-400 dark:focus:border-blue-400 dark:focus:ring-blue-400",
          placeholder: "Enter your email address" %>
    </div>
  </div>
  
  <!-- Submit Button -->
  <button type="submit" class="w-full flex justify-center py-2.5 px-4 border border-transparent rounded-lg shadow-sm text-sm font-semibold text-white bg-zinc-900 hover:bg-zinc-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-zinc-900 dark:bg-zinc-700 dark:hover:bg-zinc-600 dark:focus:ring-zinc-600">
    Email reset instructions
  </button>
  
  <!-- Back to sign in -->
  <div class="text-center text-sm text-zinc-500 dark:text-zinc-400">
    Remember your password? 
    <%= link_to new_session_path, class: "font-semibold text-zinc-950 hover:text-zinc-700 dark:text-white dark:hover:text-zinc-300" do %>
      Sign in
    <% end %>
  </div>
<% end %>
